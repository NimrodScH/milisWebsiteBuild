 {
    "compilerOptions": {
      "target": "ES2019",                    // Specify ECMAScript target version
      "module": "commonjs",                 // Use CommonJS module system (required for Node.js)
      "types": ["node", "express"],
      "rootDir": "./src",                   // Specify the root directory of input files
      "outDir": "./dist",                   // Specify the output directory for compiled files
      "strict": true,                       // Enable all strict type-checking options
      "esModuleInterop": true,              // Enable interoperability between CommonJS and ES Modules
      "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
      "skipLibCheck": true,                 // Skip type checking of declaration files
      "resolveJsonModule": true             // Allow importing JSON files as modules
    },
    "include": ["src"],                     // Include all files in the "src" directory
    "exclude": ["node_modules"]             // Exclude the "node_modules" directory
  }

